<!-- New Post Modal -->
<div id="postModal" class="modal fade" role="dialog">
	<div class="modal-dialog">
		<!-- Modal content-->
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">New Post</h4>
			</div>
			<div class="modal-body">
				<%= form_for(Post.new) do |f| %>
					<div class="form-group">
						<label for="title">Title:</label>
						<%= f.text_field :title, placeholder: "Post Title", :class => 'form-control' %>
					</div>
					<div class="form-group">
						<label for="last_name">Last Name:</label>
						<%= f.text_area :summary, placeholder: "Post Summary", :class => 'form-control' %>
					</div>
					<div class= "form-group">
						<%= f.hidden_field :city_id, :value => @city.id %>
					</div>
					<%= f.submit "Submit", :class => 'btn btn-default' %>
				<% end %>
			</div>
		</div>
	</div>
</div>

<div style="background: url(<%=@city.photo_url%>) no-repeat center center scroll" class="hero-city">
</div>
<div class="city-content col-md-10 col-md-offset-1">

	<h1>
	  <strong><%= @city.name %></strong>
	</h1>
	<h2>
		<% @keywords.each do |keyword| %> 
			<%= keyword %> |
		<% end %>
	</p>

	<h3>
		<strong>Summary:</strong>
		<%= @city.description %>
	</h3>
	<hr>

	<h1>Posts:
		<% @posts.each do |post| %> 
			<h3><%= post.title %></h2>
			<h5><%= post.summary %></h4>
		<% end %>
	</h1>
	<div class = "city-buttons">
		<%= link_to 'Back', cities_path %>  |  
		<a href="#postModal" role="button" data-toggle="modal">New Post</a>
	</div>
</div>