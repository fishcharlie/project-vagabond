<h1>Cities#show</h1>
<p>Find me in app/views/cities/show.html.erb</p>

<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @city.name %>
</p>

<p>
  <strong>Summary:</strong>
  <%= @city.description %>
</p>

<p><strong>Keywords:</strong>
<% @keywords.each do |keyword| %> 
	<%= keyword %>
<% end %>
</p>

<%= link_to 'Back', cities_path %>

<a href="#postModal" role="button" data-toggle="modal">New Post</a>

<div id="postModal" class="modal fade" role="dialog">
	<div class="modal-dialog">
		<!-- Modal content-->
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">New Post</h4>
			</div>
			<div class="modal-body">
				<%= form_for(Post.new) do |f| %>
					<div class="form-group">
						<label for="title">Title:</label>
						<%= f.text_field :title, placeholder: "Post Title", :class => 'form-control' %>
					</div>
					<div class="form-group">
						<label for="last_name">Last Name:</label>
						<%= f.text_area :summary, placeholder: "Post Summary", :class => 'form-control' %>
					</div>
					<div class= "form-group">
						<input type="hidden" name="location" value="<%=@city.id%>">
					</div>
					<%= f.submit "Submit", :class => 'btn btn-default' %>
				<% end %>
			</div>
		</div>
	</div>
</div>